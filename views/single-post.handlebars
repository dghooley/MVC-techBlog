<div class="card single-post-padding">
    <h1 id="post-title" class="post-header">{{ post.title }} </h1>
    <h4>Posted by {{post.user.username}} on 12/1/2020</h4>
    <div class="container">
        <p id="post-body" class="post-text post-text-padding">{{post.body}}</p>
    </div>

    {{ #if currentUser }}
    <button id="edit-btn">Edit</button>
    <button id="delete-btn">Delete</button>
    {{ /if }}
</div>

<div class="padding-20">
    <form id="comment-form " class="padding-20">
        <label for="comment-text">Leave A Comment</label>
        <input class="padding-20" type="textarea" name="comment-text" id="comment-text">
        <button class="padding-20" id="post-comment-btn">Post!</button>
    </form>
</div>

{{ #each post.comments as |aComment| }}
{{ > comment aComment }}
{{ /each }}
<link rel="stylesheet" href="../public/stylesheets/single-post.css">
<script src="../public/javascript/single-post.js"></script>
{{ #if currentUser }}
<script src="../public/javascript/edit-delete-post.js"> </script>
{{ /if} }